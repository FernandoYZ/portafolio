---
const navLinks = [
  { href: "/#experience", label: "Experiencia" },
  { href: "/#projects", label: "Proyectos" },
  { href: "/#about", label: "Sobre m√≠" },
  { href: "/#skills", label: "Skills" },
  { href: "/#contact", label: "Contacto" },
];
---

<!-- Desktop: Navbar flotante centrado -->
<header class="fixed top-6 left-1/2 -translate-x-1/2 z-50 hidden md:block">
  <nav class="navbar-glass rounded-2xl px-2 py-2">
    <div class="flex items-center gap-1">
      <!-- Logo -->
      <a
        href="/"
        class="px-4 py-2 text-sm font-medium text-text-primary hover:text-text-secondary"
        aria-label="Ir al inicio"
      >
        FY
      </a>

      <div class="w-px h-4 bg-border mx-1"></div>

      <!-- Navigation Links -->
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="px-3 py-2 text-sm text-text-tertiary hover:text-text-primary hover:bg-accent-dim rounded-xl"
        >
          {link.label}
        </a>
      ))}

      <div class="w-px h-4 bg-border mx-1"></div>

      <!-- CTA -->
      <a
        href="/cv.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="px-4 py-2 text-sm font-medium text-bg-primary bg-text-primary rounded-xl hover:bg-text-secondary"
      >
        CV
      </a>
    </div>
  </nav>
</header>

<!-- Mobile: Bottom Navigation (iOS style) -->
<nav class="fixed bottom-0 left-0 right-0 z-50 md:hidden safe-area-bottom">
  <div class="mx-4 mb-4">
    <div class="navbar-glass rounded-2xl px-2 py-2">
      <div class="flex items-center justify-around">
        <a
          href="/"
          class="flex flex-col items-center gap-1 px-3 py-2 text-text-tertiary hover:text-text-primary"
          aria-label="Inicio"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          <span class="text-[10px]">Inicio</span>
        </a>

        <a
          href="/#projects"
          class="flex flex-col items-center gap-1 px-3 py-2 text-text-tertiary hover:text-text-primary"
          aria-label="Proyectos"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
          </svg>
          <span class="text-[10px]">Proyectos</span>
        </a>

        <a
          href="/#skills"
          class="flex flex-col items-center gap-1 px-3 py-2 text-text-tertiary hover:text-text-primary"
          aria-label="Skills"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
          </svg>
          <span class="text-[10px]">Skills</span>
        </a>

        <a
          href="/#contact"
          class="flex flex-col items-center gap-1 px-3 py-2 text-text-tertiary hover:text-text-primary"
          aria-label="Contacto"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
          <span class="text-[10px]">Contacto</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }

  .navbar-glass {
    background: rgba(20, 20, 22, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }
</style>
