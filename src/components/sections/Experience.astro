---
import experiencia from "@/data/experiencia.json";
---
<section id="experience" class="py-24 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Section header -->
    <p class="text-xs text-text-muted uppercase tracking-widest mb-4">Experiencia</p>
    <h2 class="text-3xl sm:text-4xl font-semibold text-text-primary mb-16 tracking-tight">
      Trayectoria profesional
    </h2>

    <!-- Timeline -->
    <div class="space-y-16">
      {experiencia.map((exp) => (
        <article class="group">
          <!-- Header -->
          <div class="flex flex-col sm:flex-row sm:items-baseline gap-2 sm:gap-6 mb-6">
            <h3 class="text-xl font-medium text-text-primary">
              {exp.rol}
            </h3>
            <span class="text-sm text-text-muted">{exp.detalle}</span>
            <span class="text-sm text-text-muted sm:ml-auto">{exp.periodo}</span>
          </div>

          <!-- Highlights -->
          <ul class="space-y-3 mb-8">
            {exp.destacados.map((dest: string) => (
              <li class="flex items-start gap-4">
                <span class="w-1 h-1 rounded-full bg-text-tertiary mt-2.5 shrink-0"></span>
                <span class="text-text-secondary leading-relaxed">{dest}</span>
              </li>
            ))}
          </ul>

          <!-- Responsibilities -->
          <div class="flex flex-wrap gap-2">
            {exp.responsabilidades.map((resp: string) => (
              <span class="px-3 py-1.5 text-xs text-text-muted border border-border rounded-lg">
                {resp}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>

  </div>
</section>

<!-- Separator -->
<div class="separator max-w-4xl mx-auto"></div>
