---
const stats = [
  { value: "2+", label: "AÃ±os" },
  { value: "5+", label: "Proyectos" },
  { value: "Go", label: "Backend" },
  { value: "100%", label: "Remoto" },
];

const techStack = ["Go", "TypeScript", "PostgreSQL", "Docker", "Nginx"];
---
<section class="py-16 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Stats grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
      {stats.map((stat) => (
        <div class="glass-light rounded-2xl p-6 text-center">
          <div class="text-2xl md:text-3xl font-semibold text-text-primary mb-1">{stat.value}</div>
          <div class="text-xs text-text-muted uppercase tracking-wider">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Tech stack - inline pills -->
    <div class="flex flex-wrap justify-center gap-2">
      {techStack.map((tech) => (
        <span class="px-4 py-2 text-sm text-text-tertiary bg-bg-secondary rounded-full border border-border hover:border-border-strong hover:text-text-primary transition-all duration-200 cursor-default">
          {tech}
        </span>
      ))}
    </div>
  </div>
</section>
