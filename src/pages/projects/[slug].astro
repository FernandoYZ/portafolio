---
import { ClientRouter, fade } from "astro:transitions";
import "@/styles/global.css";
import Header from "@/components/partials/Header.astro";
import Footer from "@/components/partials/Footer.astro";

export async function getStaticPaths() {
  const projectFiles = import.meta.glob<{ default: any }>("../../data/projects/*.json", { eager: true });

  return Object.entries(projectFiles).map(([path, file]) => {
    const slug = path.split("/").pop()?.replace(".json", "") || "";
    return {
      params: { slug },
      props: { project: file.default },
    };
  });
}

const { project } = Astro.props;
const siteUrl = "https://fernandoyz.com";
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{project.title} | Fernando Yovera</title>
    <meta name="description" content={project.description} />
    <link rel="canonical" href={`${siteUrl}${Astro.url.pathname}`} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta property="og:type" content="article" />
    <meta property="og:title" content={`${project.title} | Fernando Yovera`} />
    <meta property="og:description" content={project.description} />
    <meta property="og:image" content={project.cover ? `${siteUrl}${project.cover}` : `${siteUrl}/og-image.png`} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${project.title} | Fernando Yovera`} />
    <meta name="twitter:description" content={project.description} />

    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col bg-bg-primary">
    <Header />

    <main class="flex-1 pt-20 pb-32 md:pb-24">
      <!-- Back link -->
      <div class="max-w-4xl mx-auto px-6 mb-8">
        <a
          href="/#projects"
          class="inline-flex items-center gap-2 text-sm text-text-muted hover:text-text-primary transition-colors duration-200 group"
        >
          <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Proyectos
        </a>
      </div>

      <!-- Hero -->
      <header class="max-w-4xl mx-auto px-6 mb-12" transition:animate={fade({ duration: '0.2s' })}>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-xs text-text-muted uppercase tracking-widest">Proyecto</span>
          <span class="w-1 h-1 rounded-full bg-text-muted/50"></span>
          <span class="text-xs text-text-muted">{project.year}</span>
        </div>

        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-semibold text-text-primary mb-6 tracking-tight"
          transition:name={`project-${project.id}`}
        >
          {project.title}
        </h1>

        <p class="text-xl text-text-tertiary mb-8 leading-relaxed max-w-3xl">
          {project.description}
        </p>

        <!-- Stack badges -->
        <div class="flex flex-wrap gap-2 mb-8">
          {project.stack.map((tech: string) => (
            <span class="px-3 py-1.5 text-sm text-text-tertiary bg-bg-secondary rounded-lg border border-border">
              {tech}
            </span>
          ))}
        </div>

        <!-- Links -->
        {project.repository_contact?.github && (
          <a
            href={project.repository_contact.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm text-text-primary hover:text-text-secondary transition-colors duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            Ver repositorio
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
            </svg>
          </a>
        )}
      </header>

      <!-- Screenshots -->
      {project.screenshots && project.screenshots.length > 0 && (
        <section class="max-w-4xl mx-auto px-6 mb-20">
          <div class="grid gap-4">
            {project.screenshots.map((screenshot: { title: string; image: string }) => (
              <figure class="rounded-2xl overflow-hidden border border-border bg-bg-secondary">
                <img
                  src={screenshot.image}
                  alt={screenshot.title}
                  class="w-full"
                  loading="lazy"
                />
                <figcaption class="px-6 py-4 text-sm text-text-muted">
                  {screenshot.title}
                </figcaption>
              </figure>
            ))}
          </div>
        </section>
      )}

      <!-- Content sections -->
      <div class="max-w-4xl mx-auto px-6 space-y-20">

        <!-- Overview -->
        {project.overview && (
          <section>
            <h2 class="text-xs text-text-muted uppercase tracking-widest mb-6">Resumen</h2>
            <p class="text-lg text-text-secondary leading-relaxed mb-8">
              {project.overview.short_description}
            </p>

            {project.overview.features && (
              <div class="grid sm:grid-cols-2 gap-3">
                {project.overview.features.map((feature: string) => (
                  <div class="flex items-start gap-3 p-4 rounded-xl bg-bg-secondary/50">
                    <svg class="w-5 h-5 text-text-muted mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    <span class="text-sm text-text-secondary">{feature}</span>
                  </div>
                ))}
              </div>
            )}
          </section>
        )}

        <!-- Problem & Solution -->
        {(project.problem || project.solution) && (
          <section class="grid md:grid-cols-2 gap-8">
            {project.problem && (
              <div class="p-6 rounded-2xl bg-bg-secondary border border-border">
                <h3 class="text-xs text-text-muted uppercase tracking-widest mb-4">Problema</h3>
                <p class="text-text-secondary leading-relaxed">{project.problem.description}</p>
              </div>
            )}
            {project.solution && (
              <div class="p-6 rounded-2xl bg-bg-secondary border border-border">
                <h3 class="text-xs text-text-muted uppercase tracking-widest mb-4">Solución</h3>
                <p class="text-text-secondary leading-relaxed mb-4">{project.solution.description}</p>
                {project.solution.details && (
                  <ul class="space-y-2">
                    {project.solution.details.map((detail: string) => (
                      <li class="flex items-start gap-2 text-sm text-text-muted">
                        <span class="w-1 h-1 rounded-full bg-text-muted mt-2 shrink-0"></span>
                        {detail}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            )}
          </section>
        )}

        <!-- Architecture -->
        {project.architecture && (
          <section>
            <h2 class="text-xs text-text-muted uppercase tracking-widest mb-6">Arquitectura</h2>
            <div class="p-6 rounded-2xl bg-bg-secondary border border-border mb-6">
              <p class="text-text-secondary leading-relaxed mb-6">{project.architecture.description}</p>

              {project.architecture.structure && (
                <div class="font-mono text-sm">
                  <pre class="text-text-muted overflow-x-auto"><code>{JSON.stringify(project.architecture.structure, null, 2)}</code></pre>
                </div>
              )}
            </div>

            {project.design_decisions && (
              <div class="space-y-3">
                <h3 class="text-sm text-text-tertiary mb-4">Decisiones de diseño</h3>
                {project.design_decisions.map((decision: string) => (
                  <div class="flex items-start gap-3 text-text-secondary">
                    <svg class="w-4 h-4 text-text-muted mt-1 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm">{decision}</span>
                  </div>
                ))}
              </div>
            )}
          </section>
        )}

        <!-- Performance -->
        {project.performance_optimizations && (
          <section>
            <h2 class="text-xs text-text-muted uppercase tracking-widest mb-6">Rendimiento</h2>

            <div class="grid md:grid-cols-2 gap-6 mb-8">
              {project.performance_optimizations.database && (
                <div class="p-6 rounded-2xl bg-bg-secondary border border-border">
                  <h3 class="text-sm text-text-primary mb-4">Base de datos</h3>
                  <ul class="space-y-2">
                    {project.performance_optimizations.database.map((opt: string) => (
                      <li class="text-sm text-text-muted flex items-start gap-2">
                        <span class="w-1 h-1 rounded-full bg-text-muted mt-2 shrink-0"></span>
                        {opt}
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {project.performance_optimizations.backend && (
                <div class="p-6 rounded-2xl bg-bg-secondary border border-border">
                  <h3 class="text-sm text-text-primary mb-4">Backend</h3>
                  <ul class="space-y-2">
                    {project.performance_optimizations.backend.map((opt: string) => (
                      <li class="text-sm text-text-muted flex items-start gap-2">
                        <span class="w-1 h-1 rounded-full bg-text-muted mt-2 shrink-0"></span>
                        {opt}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>

            {project.performance_optimizations.performance_metrics && (
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                <div class="p-4 rounded-xl bg-bg-tertiary/50 text-center">
                  <div class="text-2xl font-semibold text-text-primary mb-1">
                    {project.performance_optimizations.performance_metrics.weekly_queries_improvement}
                  </div>
                  <div class="text-xs text-text-muted">Mejora en consultas</div>
                </div>
                {project.performance_optimizations.performance_metrics.response_time?.local_db && (
                  <div class="p-4 rounded-xl bg-bg-tertiary/50 text-center">
                    <div class="text-2xl font-semibold text-text-primary mb-1">
                      {project.performance_optimizations.performance_metrics.response_time.local_db.split(' ')[0]}
                    </div>
                    <div class="text-xs text-text-muted">Tiempo respuesta (local)</div>
                  </div>
                )}
              </div>
            )}
          </section>
        )}

        <!-- Routes/API -->
        {project.routes && (
          <section>
            <h2 class="text-xs text-text-muted uppercase tracking-widest mb-6">Rutas de la API</h2>
            <div class="rounded-2xl border border-border overflow-hidden">
              <table class="w-full text-sm">
                <thead class="bg-bg-secondary">
                  <tr>
                    <th class="px-4 py-3 text-left text-text-muted font-medium">Método</th>
                    <th class="px-4 py-3 text-left text-text-muted font-medium">Ruta</th>
                    <th class="px-4 py-3 text-left text-text-muted font-medium hidden sm:table-cell">Descripción</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-border">
                  {project.routes.map((route: { method: string; path: string; description: string }) => (
                    <tr class="hover:bg-bg-secondary/50 transition-colors">
                      <td class="px-4 py-3">
                        <span class:list={[
                          "px-2 py-0.5 rounded text-xs font-mono",
                          route.method === "GET" ? "bg-green-500/10 text-green-400" : "bg-yellow-500/10 text-yellow-400"
                        ]}>
                          {route.method}
                        </span>
                      </td>
                      <td class="px-4 py-3 font-mono text-text-secondary">{route.path}</td>
                      <td class="px-4 py-3 text-text-muted hidden sm:table-cell">{route.description}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </section>
        )}

        <!-- Lessons Learned -->
        {project.lessons_learned && (
          <section>
            <h2 class="text-xs text-text-muted uppercase tracking-widest mb-6">Lecciones aprendidas</h2>
            <div class="space-y-4">
              {project.lessons_learned.map((lesson: string, index: number) => (
                <div class="flex items-start gap-4 p-4 rounded-xl bg-bg-secondary/50">
                  <span class="w-6 h-6 rounded-full bg-bg-tertiary flex items-center justify-center text-xs text-text-muted shrink-0">
                    {index + 1}
                  </span>
                  <p class="text-text-secondary">{lesson}</p>
                </div>
              ))}
            </div>
          </section>
        )}

      </div>

      <!-- Back to projects -->
      <div class="max-w-4xl mx-auto px-6 mt-24">
        <div class="separator mb-12"></div>
        <a
          href="/#projects"
          class="group inline-flex items-center gap-3 text-text-tertiary hover:text-text-primary transition-colors duration-200"
        >
          <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Ver más proyectos
        </a>
      </div>
    </main>

    <Footer />
  </body>
</html>
